<% layout('layouts/boilerplate') -%>
<h3>All camps</h3>

<%for (let camps of campgrounds) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img src="<%=camps.image%>" class="img-fluid" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=camps.title %></h5>
        <p class="card-text"><%=camps.description %></p>
        <p class="card-text">
          <small class="text-muted"> <%=camps.location %> </small>
        </p>
        <a class="btn btn-primary" href="/campgrounds/<%=camps._id%> "
          >View <%=camps.title %>
        </a>
      </div>
    </div>
  </div>
</div>

<% } %>
